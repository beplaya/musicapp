<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/result_item_tv_artist_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/result_item_iv_album_image"
        android:layout_width="match_parent"
        android:src="@android:drawable/progress_horizontal"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/result_item_tv_album_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
    android:id="@+id/result_item_tv_track_name"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" />
</LinearLayout>