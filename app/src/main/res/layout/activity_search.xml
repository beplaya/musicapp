<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="examples.gjames.com.musicapp.activities.search.ItunesSearchActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/et_itunes_search_terms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:hint="Search Terms" />

        <Button
            android:id="@+id/btn_itunes_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="Search" />

        <TextView
            android:id="@+id/tv_search_error_msg"
            android:layout_width="match_parent"
            android:textColor="@android:color/holo_red_light"
            android:layout_height="wrap_content" />

        <ListView
            android:id="@+id/lv_search_results"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></ListView>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
